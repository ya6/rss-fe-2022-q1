{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions":["error", "never"],
         "class-methods-use-this": "off",
    },
    "settings": {
  "import/extensions": [
    ".js",
    ".ts"
  ],
   "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
}
}
